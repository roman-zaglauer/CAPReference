{
  "name": "bookshop",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "https://github.com/roman-zaglauer/cap-samples/tree/bookshop",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^7",
    "@sap/cds-dk": "^7",
    "express": "^4",
    "@sap/xssec": "^3",
    "sqlite3": "^5"
  },
  "devDependencies": {},
  "scripts": {
    "license-report": "license-report --output=table",
    "start": "cds run",
    "build": "mbt build -t gen --mtar mta.tar",
    "deploy": "cf deploy gen/mta.tar --retries 1",
    "undeploy": "cf undeploy bookshop --delete-services --delete-service-keys",
    "cleanup": "rimraf **/gen && rimraf **/dist && rimraf **/coverage && rimraf **/package-lock.json && rimraf **/node_modules"
  },
  "cds": {
    "requires": {
      "[development]": {
        "db": {
          "kind": "sqlite",
          "credentials": {
            "database": ":memory:"
          }
        }
      },
      "[production]": {
        "auth": "xsuaa",
        "db": {
          "kind": "sqlite",
          "credentials": {
            "database": ":memory:"
          }
        }
      }
    },
    "features": {
      "in_memory_db": true
    }
  }
}
