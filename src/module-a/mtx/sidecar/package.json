{
  "name": "cap-reference-mtx",
  "dependencies": {
    "@sap/cds": "^7",
    "@sap/cds-hana": "^2",
    "@sap/cds-mtxs": "^1",
    "@sap/xsenv": "^4",
    "@sap/xssec": "^3",
    "express": "^4",
    "passport": "^0",
    "ts-node": "^10"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@types/cfenv": "^1",
    "@types/sap__xsenv": "^3"
  },
  "scripts": {
    "start": "cds-serve",
    "pre:build": "npm i",
    "build": "npx -p @sap/cds-dk cds build --production && npx -p typescript tsc",
    "watch": "cds watch",
    "profile:mtx-sidecar": "cds env get requires --profile mtx-sidecar",
    "profile:with-mtx-sidecar": "cds env get requires --profile with-mtx-sidecar"
  },
  "cds": {
    "profile": "mtx-sidecar",
    "[mtx-sidecar]": {
      "requires": {
        "cds.xt.ModelProviderService": {
          "kind": "in-sidecar",
          "[development]": {
            "root": "../../"
          },
          "[production]": {
            "root": "_main"
          },
          "[prod]": {
            "root": "_main"
          }
        },
        "cds.xt.DeploymentService": "in-sidecar",
        "cds.xt.SaasProvisioningService": true,
        "cds.xt.ExtensibilityService": true,
        "db": {
          "[development]": {
            "credentials": {
              "url": "../../../../.sqlite/db.sqlite"
            }
          }
        }
      }
    }
  }
}
