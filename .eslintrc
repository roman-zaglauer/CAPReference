{
    "env": {
      "browser": true,
      "es2022": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "root": true,
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off",
      "prettier/prettier": ["warn"]
    },
    "extends": ["eslint:recommended", "prettier", "plugin:@sap/cds/recommended"],
    "plugins": ["prettier", "security-node", "@typescript-eslint"],
    "ignorePatterns": ["**/gen/*", "**/types/*", "**/node_modules/*", "**/dist/*", "**/*.d.ts"]
}